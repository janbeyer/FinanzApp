<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:id="@+id/dialog_write_transaction_root_view">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/field_name"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_marginEnd="5sp" />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_weight="3"
            android:id="@+id/transaction_new_name"
            android:text=""
            tools:ignore="Autofill,LabelFor"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/field_description"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_marginEnd="5sp" />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_weight="3"
            android:id="@+id/transaction_new_description"
            android:text=""
            tools:ignore="Autofill,LabelFor"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/transaction_amount"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_marginEnd="5sp" />

        <EditText
            android:id="@+id/transaction_new_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="number"
            android:text="0"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">
        <RadioGroup android:id="@+id/transaction_new_expenditureRevenue"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="start">
            <RadioButton android:id="@+id/transaction_new_expenditure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/transaction_expenture" />
            <RadioButton android:id="@+id/transaction_new_revenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transaction_revenue" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">
        <Spinner
            android:id="@+id/transaction_new_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/transaction_new_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/transaction_new_state_unique"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/transaction_state_unique"
                    android:layout_marginTop="12sp" />

                <RadioButton
                    android:id="@+id/transaction_new_state_daily"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction_state_daily"
                    android:layout_marginTop="12sp" />

                <RadioButton
                    android:id="@+id/transaction_new_state_weekly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction_state_weekly"
                    android:layout_marginTop="12sp" />

                <RadioButton
                    android:id="@+id/transaction_new_state_monthly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction_state_monthly"
                    android:layout_marginTop="12sp" />

                <RadioButton
                    android:id="@+id/transaction_new_state_yearly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction_state_yearly"
                    android:layout_marginTop="12sp" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/transaction_new_state_unique_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:inputType="number"></EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/transaction_new_state_weekly_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"></EditText>

            <EditText
                android:id="@+id/transaction_new_state_monthly_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"></EditText>

            <EditText
                android:id="@+id/transaction_new_state_yearly_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/transaction_new_state_yearly_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"></EditText>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>